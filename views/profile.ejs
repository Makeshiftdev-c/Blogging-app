<%- include('includes/header') %>

<div class="container py-md-5 mb-5 container--narrow">
  <%- include('includes/flash') %> <%- include('includes/profileShared') %>

  <div class="list-group">
    <% posts.forEach((post) => { %>
    <a
      href="/post/<%= post._id %>"
      class="list-group-item list-group-item-action"
    >
      <img class="avatar-tiny" src="<%= post.author.avatar %>" />
      <strong><%= post.title %></strong>
      on <%= post.createdDate.getDate() %>/<%= post.createdDate.getMonth() + 1
      %>/<%= post.createdDate.getFullYear() %>
      <span class="float-right mt-1 small text-muted"
        >Likes: <%= post.likeCount %> | Comments: <%= post.commentCount %></span
      >
    </a>
    <% }) %>
  </div>
</div>

<%- include('includes/footer') %>
